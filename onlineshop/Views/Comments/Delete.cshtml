@model onlineshop.Services.DTO.CommentDTO

@{
    ViewBag.Title = "Comment";
}

<h2>Comment</h2>

<h3>Are you sure you want to delete this?</h3>

<div class="container">

    <h4>Comment</h4>
    <br/>

    <dl class="row">

        <dt class="col-sm-3">
            @Html.DisplayFor(model=>model.Title)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model=>model.Title)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayFor(model=>model.AuthorDTOId)
        </dt>

        @if (Model.AuthorDTO != null)
        {
            <dd class="col-sm-9">
                @Html.DisplayFor(model=>model.AuthorDTO.UserName)
            </dd>
        }
        else
        {
            <dd class="col-sm-9">
                unknown user
            </dd>
        }

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model=>model.ProductDTOId)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model=>model.ProductDTO.Name)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model=>model.Text)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model=>model.Text)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model=>model.CreationTime)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model=>model.CreationTime)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model=>model.ModificationTime)
        </dt>

        @if (Model.ModificationTime != null)
        {
            <dd class="col-sm-9">
                @Html.DisplayFor(model=>model.ModificationTime.Value)
            </dd>
        }
        else
        {
            <dd class="col-sm-9">
                not set
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }

</div>