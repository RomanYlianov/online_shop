@model IEnumerable<onlineshop.Services.DTO.PaymentMethodDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Payment methods list</h2>

<p>
    @Html.ActionLink("Create new", "Create")
</p>



<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model=>model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.PaymentType)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Provider)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.CVV)
            </th>
            <th>
                Details
            </th>
            @if (ViewData["rSeller"] != null || ViewData["rOwner"] != null)
            {
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.flag == true)
        {
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem=>item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Provider)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                   
                    @if (item.ExpirationDate!=null)
                    {
                        <td>
                            @Html.DisplayFor(modelItem=>item.ExpirationDate.Value)
                        </td>
                        
                    }
                    else
                    {
                        <td>
                            not declared
                        </td>
                    }
                    
                    @if (item.CVV != null)
                    {
                        <td>
                            @Html.DisplayFor(modelItem=>item.CVV.Value)
                        </td>
                    }
                    else
                    {
                        <td>not declared</td>
                    }                   

                    <td>
                        @Html.ActionLink("Details", "Details", new { id=item.Id })                        
                       
                    </td>
                    @if (ViewData["rSeller"] != null || ViewData["rOwner"] != null)
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                        </td>
                    }
                    
                </tr>
            }
        }
        else
        {
            @if (ViewData["rSeller"] != null || ViewData["rOwner"] != null)
            {
                <tr>
                    <td colspan="8">no data</td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="6">no data</td>
                </tr>
            }

           
        }
    </tbody>
</table>