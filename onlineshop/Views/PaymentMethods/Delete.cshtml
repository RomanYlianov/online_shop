@model onlineshop.Services.DTO.PaymentMethodDTO;

@{
    ViewBag.Title = "Delete";
}

<h2>Paymetn method</h2>

<h3>Are you sure you want to delete this?</h3>

<div class="container">
    <h4>Payment method</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model=>model.Name)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model=>model.Name)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model=>model.MoneyValue)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model=>model.MoneyValue)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PaymentType)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Provider)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Provider)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Number)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Number)
        </dd>

        @if (Model.ExpirationDate != null)
        {
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </dt>

            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ExpirationDate.Value)
            </dd>
        }

        @if (Model.CVV != null)
        {
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CVV )
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CVV.Value)
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
